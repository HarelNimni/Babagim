<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@drawable/baba_background">

    <EditText
        android:id="@+id/enterPhone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="הקלד את מספר הטלפון שלך"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        android:inputType="phone"
        android:drawableStart="@drawable/phone_ic"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <EditText
        android:id="@+id/enterCode"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="הקלד את הקוד"
        android:textColorHint="@color/black"
        android:visibility="invisible"
        android:inputType="textPassword"
        android:drawableStart="@drawable/sms_ic"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/sendSMS"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="שלח סמס"
        android:textColor="#A22C2C"
        android:textSize="20sp"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <TextView
        android:id="@+id/returnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזור למסך ההתחברות"
        android:textSize="15sp"
        android:textColor="#48B8E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <TextView
        android:id="@+id/returnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עבור למסך ההרשמה"
        android:textSize="15sp"
        android:textColor="#48B8E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832" />


</androidx.constraintlayout.widget.ConstraintLayout>